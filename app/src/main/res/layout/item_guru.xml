<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_logout"
    app:cardBackgroundColor="@color/white1"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gambarGuru"
            android:layout_width="61dp"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/tvGuru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/satoshi_bold"
            android:text="Nama Guru"
            android:textColor="@color/black1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvMatpel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/satoshi_regular"
            android:text="Mata Pelajaran"
            android:textColor="@color/black1"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnRating"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="5.0"
            app:icon="@drawable/vc_star"
            app:iconTint="@color/primary" />

        <TextView
            android:id="@+id/tvJenjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_jenjang"
            android:fontFamily="@font/satoshi_regular"
            android:text="Jenjang 1"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/tvJenjang2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_jenjang"
            android:fontFamily="@font/satoshi_regular"
            android:text="Jenjang 2"
            android:textColor="@color/black1" />
    </LinearLayout>

</androidx.cardview.widget.CardView>