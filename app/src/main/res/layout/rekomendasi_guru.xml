<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/template_rekom_guru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rekom_guru_rectangle"/>

        <ImageView
            android:id="@+id/imageRekomGuru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="@+id/template_rekom_guru"
            app:layout_constraintTop_toTopOf="@+id/template_rekom_guru"
            app:srcCompat="@drawable/imguru1" />

        <TextView
            android:id="@+id/textNamaGuru"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/satoshi_black"
            android:text="@string/nama_guru"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/template_rekom_guru"
            app:layout_constraintStart_toEndOf="@+id/imageRekomGuru"
            app:layout_constraintTop_toTopOf="@+id/template_rekom_guru" />

        <TextView
            android:id="@+id/textMapel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/satoshi_light"
            android:text="@string/mata_pelajaran"
            android:gravity="center_horizontal"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/template_rekom_guru"
            app:layout_constraintStart_toEndOf="@+id/imageRekomGuru"
            app:layout_constraintTop_toBottomOf="@+id/textNamaGuru" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/satoshi_light"
            android:text="tersedia untuk"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/template_rekom_guru"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/template_rekom_guru"
            app:layout_constraintTop_toBottomOf="@+id/imageRekomGuru" />

        <TextView
            android:id="@+id/textSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="4dp"
            android:background="@color/secondary100"
            android:fontFamily="@font/satoshi_medium"
            android:text="SD Kelas 4-6"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/template_rekom_guru"
            app:layout_constraintTop_toBottomOf="@+id/textView25" />

        <TextView
            android:id="@+id/textSMP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/secondary100"
            android:fontFamily="@font/satoshi_medium"
            android:gravity="center_horizontal"
            android:text="SMP"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/template_rekom_guru"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/textSD"
            app:layout_constraintTop_toBottomOf="@+id/textView25" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/satoshi_light"
            android:text="Bergabung"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/template_rekom_guru"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toStartOf="@+id/template_rekom_guru"
            app:layout_constraintTop_toBottomOf="@+id/textSD" />

        <TextView
            android:id="@+id/textTahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/satoshi_medium"
            android:text="2023"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/template_rekom_guru"
            app:layout_constraintEnd_toEndOf="@+id/template_rekom_guru"
            app:layout_constraintHorizontal_bias="0.222"
            app:layout_constraintStart_toStartOf="@+id/template_rekom_guru"
            app:layout_constraintTop_toBottomOf="@+id/textView28"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>