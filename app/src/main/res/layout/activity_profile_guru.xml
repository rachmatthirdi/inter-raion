<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButtonBackProfileGuru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/app_name"
                        android:padding="20dp"
                        android:src="@drawable/vector_back" />

                    <TextView
                        android:id="@+id/textProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="105dp"
                        android:fontFamily="@font/satoshi_bold"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="Profil"
                        android:textSize="25sp" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/gambar_guru_besar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/imguru_besar1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/rating_guru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/layout_rating_guru"
                        android:fontFamily="@font/satoshi_bold"
                        android:gravity="center"
                        android:text="4.5"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/gambar_guru_besar" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textNamaGuruProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/satoshi_bold"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="@string/nama_guru"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/textMapelGuruProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/satoshi_medium"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="@string/mata_pelajaran"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/box_profile_guru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/rectangleProfilGuru"
                        android:layout_width="353dp"
                        android:layout_height="96dp"
                        android:src="@drawable/rectangle_profile_guru"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.494"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/tesediaUntuk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/satoshi_regular"
                        android:text="Tersedia untuk"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="@+id/rectangleProfilGuru"
                        app:layout_constraintTop_toTopOf="@id/rectangleProfilGuru" />

                    <TextView
                        android:id="@+id/textGolongan1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/rounded_background_golongan_profile_guru"
                        android:fontFamily="@font/satoshi_medium"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="SD Kelas 4-6"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/rectangleProfilGuru"
                        app:layout_constraintTop_toBottomOf="@+id/tesediaUntuk"
                        app:layout_constraintVertical_bias="0.285" />

                    <TextView
                        android:id="@+id/textGolongan2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/rounded_background_golongan_profile_guru"
                        android:fontFamily="@font/satoshi_medium"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="SMP"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textGolongan1"
                        app:layout_constraintTop_toBottomOf="@+id/tesediaUntuk"
                        app:layout_constraintVertical_bias="0.666" />

                    <ImageView
                        android:id="@+id/LineProfilGuru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="68dp"
                        android:paddingVertical="12dp"
                        android:src="@drawable/line_profile_guru"
                        app:layout_constraintBottom_toBottomOf="@+id/rectangleProfilGuru"
                        app:layout_constraintStart_toStartOf="@id/textGolongan2"
                        app:layout_constraintTop_toTopOf="@+id/rectangleProfilGuru" />

                    <TextView
                        android:id="@+id/textGabung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/satoshi_regular"
                        android:text="Bergabung"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="@+id/LineProfilGuru"
                        app:layout_constraintTop_toTopOf="@id/rectangleProfilGuru" />

                    <TextView
                        android:id="@+id/textTahun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="@font/satoshi_bold"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="2023"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/LineProfilGuru"
                        app:layout_constraintTop_toBottomOf="@+id/textGabung" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:layout_width="353dp"
                    android:layout_height="400dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    tools:context=".ActivityProfileGuru">


                    <com.google.android.material.bottomnavigation.BottomNavigationView
                        android:id="@+id/nav_profile_guru"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_bar_profil_guru"
                        app:menu="@menu/nav_profile_guru" />
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:id="@+id/fragment_container_profile"
                            android:contentDescription="@string/app_name"
                            android:layout_width="match_parent"
                            android:layout_height="360dp"
                            android:layout_marginBottom="60dp" />
                    </androidx.core.widget.NestedScrollView>

                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


        <LinearLayout
            android:id="@+id/bar_hubungi_pesan_guru"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:src="@drawable/image_button_profile_guru"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/buttonContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:src="@drawable/hubungi_button_profile_guru" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>